<article class="task">
     <h1><%= name %> (in <%= columnName %>)</h1>
     <button
          href="http://localhost:8080/tasks/<%= columnName %>/<%= name %>"
          class="btn-close"
          onclick="deleteTask(event, '<%= columnName %>', '<%= name %>');"
     >
          ❌
     </button>
</article>
