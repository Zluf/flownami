<article class="task">
     <h1><%= name %> (in <%= columnName %>)</h1>
     <button
          href="http://localhost:8080/tasks/<%= columnName %>/<%= name %>"
          class="btn-close"
          onclick="deleteTask('<%= columnName %>', '<%= name %>');"
     >
          ‚ùå
     </button>
</article>
<script>
     function deleteTask(columnName, taskName) {
          fetch(`tasks/${columnName}/${taskName}`, { method: 'DELETE' }).then(
               () => window.location.reload()
          )
     }
</script>
